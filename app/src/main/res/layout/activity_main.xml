<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:background="@drawable/ph15"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="fill"
        app:columnCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="2">

        <Button
            android:id="@+id/button"
            android:layout_width="65dp"
            android:layout_height="125dp"
            android:backgroundTint="#00FFFFFF"
            android:text="押せ"
            app:layout_column="3"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/cymbal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:srcCompat="@drawable/cymbal1" />

        <ImageButton
            android:id="@+id/cymbal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:foregroundGravity="fill"
            android:scaleType="fitCenter"
            app:layout_column="4"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:srcCompat="@drawable/cymbal2" />

        <ImageButton
            android:id="@+id/cymbal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:foregroundGravity="fill"
            android:scaleType="fitCenter"
            app:layout_column="5"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:srcCompat="@drawable/cymbal3" />

        <ImageButton
            android:id="@+id/Bass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:foregroundGravity="fill"
            android:scaleType="fitCenter"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:srcCompat="@drawable/bass" />

        <ImageButton
            android:id="@+id/hihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:foregroundGravity="fill"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:srcCompat="@drawable/hihat" />

        <ImageButton
            android:id="@+id/snare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:foregroundGravity="fill"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:srcCompat="@drawable/snare" />

        <ImageButton
            android:id="@+id/tom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:foregroundGravity="fill"
            android:scaleType="fitCenter"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:srcCompat="@drawable/tom1" />

        <ImageButton
            android:id="@+id/tom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:foregroundGravity="fill"
            android:scaleType="fitCenter"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:srcCompat="@drawable/tom2" />

        <ImageButton
            android:id="@+id/tom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:foregroundGravity="fill"
            android:scaleType="fitCenter"
            app:layout_column="4"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:srcCompat="@drawable/tom3" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>